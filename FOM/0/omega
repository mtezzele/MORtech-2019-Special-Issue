FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

turbulentOmega       32;

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform $turbulentOmega;

boundaryField
{
    inlet
    {
        type  fixedValue;
        value $internalField;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    top
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    bottom
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    "(sides)"
    {
        type slip;
    }

    frontAndBack
    {
        type            empty;
    }
}


// ************************************************************************* //
